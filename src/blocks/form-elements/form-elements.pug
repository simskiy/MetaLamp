include ../text-field/text-field.pug
include ../rate/rate.pug
include ../checkBtn/checkBtn.pug
include ../radioBtn/radioBtn.pug
include ../toggleBtn/toggleBtn.pug
include ../dblSlider/dblSlider.pug
include ../btn/btn.pug
include ../dropDown/dropDown.pug
include ../checkboxList/checkboxList.pug

mixin form-elements

  +text-field({preset: 'text'})(style="width: 320px; margin: 10px;")
  +text-field({preset: 'text-hover'})(style="width: 320px; margin: 10px;")
  +text-field({preset: 'text-drop'})(style="width: 320px; margin: 10px;")
  +text-field({preset: 'date'})(style="width: 320px; margin: 10px;")
  +text-field({preset: 'text-arrow'})
  +text-field({preset: 'date-drop'})
  +text-field({preset: 'date-filter'})

  +rate()
  +checkBtn()

  +radioBtn({preset: 'male'})
  +radioBtn({preset: 'female'})

  +toggleBtn({name: 'name', value: 'on', label: 'Получать спецпредложения', checked: true})
  +toggleBtn({name: 'name', value: 'off', label: 'Получать спецпредложения'})

  +btn({preset: 'clear'})(style="width: 99px; margin: 10px;")
  +btn({preset: 'clear', active: true})(style="width: 99px; margin: 10px;")
  +btn({preset: 'purple'})(style="width: 99px; margin: 10px;")
  +btn({preset: 'purple', active: true})(style="width: 99px; margin: 10px;")
  +btn({preset: 'arrow'})(style="width: 320px; margin: 10px;")

  +dblSlider({preset: 'default'})(style="width: 266px")

  +drop-down({span: 'default', placeholder: '2 спальни, 2 кровати...'})(style="width: 266px")

  +checkboxList({
    items: [
      ['Завтрак', false],
      ['Письменный стол', true],
      ['Стул для кормления', true],
      ['Кроватка', true],
      ['Телевизор', false],
      ['Шампунь', false] ],
    expand: false
  })
