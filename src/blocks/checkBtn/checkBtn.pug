//- name - аттрибут name
//- value - аттрибут value
//- label - текст label
//- checked - аттрибут checked

mixin checkBtn(name, value, label, checked)
  .checkBtn
    input.checkBtn__input#checkBtn(type="checkbox", name=name, value=value, checked=checked)
    label.checkBtn__label(for="checkBtn")= label
