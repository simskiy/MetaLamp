mixin pagination
  .pagination&attributes(attributes)
    ul.pagination__list
      li.pagination__item
        a.pagination__link.pagination__link--current(href="#") 1
      li.pagination__item
        a.pagination__link(href="#") 2
      li.pagination__item
        a.pagination__link(href="#") 3
      li.pagination__item
        a.pagination__link.pagination__link--ellipsis(href="#") ...
      li.pagination__item
        a.pagination__link(href="#") 15
      li.pagination__item
        a.pagination__link.pagination__link--next(href="#")
    span.pagination__note 1 – 12 из 100+ вариантов аренды
